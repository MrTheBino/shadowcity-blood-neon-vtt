<section class="tab {{tabs.character.id}} {{tabs.character.cssClass}} scrollable" id="character"
    data-tab="{{tabs.character.id}}" data-group="{{tabs.character.group}}">
    <div class="flexrow character-main-view">
        <div class="left-half">
            <div class="grid grid-2col">
                <div class="ability-container">
                    <label class="ability-label"> Hit Points</label>
                    <div class="grid grid-2col">
                        <input type="number" name="system.health.value" value="{{system.health.value}}"
                            data-dtype="Number" />
                        <input type="number" name="system.health.max" value="{{system.health.max}}"
                            data-dtype="Number" />
                    </div>
                </div>
                <div class="ability-container">
                    <label class="ability-label">Bloodpoints</label>
                    <div class="grid grid-2col">
                        <input type="number" name="system.bloodpoints.value" value="{{system.bloodpoints.value}}"
                            data-dtype="Number" />
                        <input type="number" name="system.bloodpoints.max" value="{{system.bloodpoints.max}}"
                            data-dtype="Number" />
                    </div>
                </div>
            </div>
            <div class="grid grid-2col">
                <div class="ability-container">
                    <label class="ability-label">Defense</label>
                    <div class="grid grid-2col">
                        <input type="number" name="system.defense" value="{{system.defense}}" data-dtype="Number" />
                        <input type="number" class="neon-input" value="{{defenseCalculated}}" data-dtype="Number"
                            disabled />
                    </div>
                </div>
                <div class="ability-container">
                    <label class="ability-label">Humanity</label>
                    <div class="grid grid-2col">
                        <input type="number" name="system.humanity" value="{{system.humanity}}" data-dtype="Number" />
                    </div>
                </div>
            </div>
            <div class="abilities-section">
                <div class="grid grid-2col">
                    {{> "systems/shadowcity-blood-neon-vtt/templates/actor/parts/ability-partial.hbs" key='awareness'
                    label=(localize 'SHADOWCITY.LABELS.Abilities.awareness') value=system.abilities.awareness.value
                    ability=system.abilities.awareness
                    mod_value=system.abilities.awareness.mod_value}}
                    {{> "systems/shadowcity-blood-neon-vtt/templates/actor/parts/ability-partial.hbs" key='physique'
                    label=(localize 'SHADOWCITY.LABELS.Abilities.physique') value=system.abilities.physique.value
                    ability=system.abilities.physique
                    mod_value=system.abilities.physique.mod_value}}
                </div>
                <div class="grid grid-2col">
                    {{> "systems/shadowcity-blood-neon-vtt/templates/actor/parts/ability-partial.hbs" key='cognition'
                    label=(localize 'SHADOWCITY.LABELS.Abilities.cognition') value=system.abilities.cognition.value
                    ability=system.abilities.cognition
                    mod_value=system.abilities.cognition.mod_value}}
                    {{> "systems/shadowcity-blood-neon-vtt/templates/actor/parts/ability-partial.hbs" key='quickness'
                    label=(localize 'SHADOWCITY.LABELS.Abilities.quickness') value=system.abilities.quickness.value
                    ability=system.abilities.quickness
                    mod_value=system.abilities.quickness.mod_value}}
                </div>
                <div class="grid grid-2col">
                    {{> "systems/shadowcity-blood-neon-vtt/templates/actor/parts/ability-partial.hbs" key='magnetism'
                    label=(localize 'SHADOWCITY.LABELS.Abilities.magnetism') value=system.abilities.magnetism.value
                    ability=system.abilities.magnetism
                    mod_value=system.abilities.magnetism.mod_value}}
                    {{> "systems/shadowcity-blood-neon-vtt/templates/actor/parts/ability-partial.hbs" key='willpower'
                    label=(localize 'SHADOWCITY.LABELS.Abilities.willpower') value=system.abilities.willpower.value
                    ability=system.abilities.willpower
                    mod_value=system.abilities.willpower.mod_value}}
                </div>
                <div class="">
                    <div class="single-feature-container">
                        <div class="feature-header">Blood Boost</div>
                        <select class="bloodboost-select">
                            <option value="none">None</option>
                            <option value="awareness" {{#if system.abilities.awareness.bloodboost}}selected{{/if}}>
                                Awareness
                            </option>
                            <option value="physique" {{#if system.abilities.physique.bloodboost}}selected{{/if}}>
                                Physique
                            </option>
                            <option value="cognition" {{#if system.abilities.cognition.bloodboost}}selected{{/if}}>
                                Cognition
                            </option>
                            <option value="quickness" {{#if system.abilities.quickness.bloodboost}}selected{{/if}}>
                                Quickness
                            </option>
                            <option value="magnetism" {{#if system.abilities.magnetism.bloodboost}}selected{{/if}}>
                                Magnetism
                            </option>
                            <option value="willpower" {{#if system.abilities.willpower.bloodboost}}selected{{/if}}>
                                Willpower
                            </option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="right-half">
            <div class="grid grid-4col">
                <div class="ability-container">
                    <label class="ability-label">Luck</label>
                    <div class="grid grid-2col">
                        <input class="grid-span-2" type="number" name="system.luck" value="{{system.luck}}"
                            data-dtype="Number" />
                    </div>
                </div>
                <div class="ability-container">
                    <label class="ability-label">Funds</label>
                    <div class="grid grid-2col">
                        <input class="grid-span-2" type="number" name="system.money" value="{{system.money}}"
                            data-dtype="Number" />
                    </div>
                </div>
                <div class="ability-container">
                    <label class="ability-label">Lvl</label>
                    <div class="grid grid-2col">
                        <input class="grid-span-2" type="number" name="system.level" value="{{system.level}}"
                            data-dtype="Number" />
                    </div>
                </div>
                <div class="ability-container">
                    <label class="ability-label">XP</label>
                    <div class="grid grid-2col">
                        <input type="number" name="system.xp.value" value="{{system.xp.value}}" data-dtype="Number" />
                        <input type="number" name="system.xp.max" value="{{system.xp.max}}" data-dtype="Number" />
                    </div>
                </div>
            </div>

            <div class="grid grid-2col">
                <div class="background">
                    {{> "systems/shadowcity-blood-neon-vtt/templates/actor/parts/single-feature.hbs" object=background
                    label='Background'}}
                </div>

                <div class="Bloodline">
                    {{> "systems/shadowcity-blood-neon-vtt/templates/actor/parts/single-feature.hbs" object=bloodline
                    label='Bloodline'}}
                </div>
            </div>
            <div class="grid grid-2col">
                <div class="Class">
                    {{> "systems/shadowcity-blood-neon-vtt/templates/actor/parts/single-feature.hbs" object=class
                    label='Class'}}
                </div>
                <div class="Compulsion">
                    {{> "systems/shadowcity-blood-neon-vtt/templates/actor/parts/single-feature.hbs" object=compulsion
                    label='Compulsion'}}
                </div>
            </div>
            <div class="grid grid-2col">
                <div class="FeedingHabits">
                    {{> "systems/shadowcity-blood-neon-vtt/templates/actor/parts/single-feature.hbs" object=feeding
                    label='Feeding Habits'}}
                </div>
                <div class="single-feature-container">
                    <div class="feature-header">BP used this night</div>
                    <input type="number" name="system.bloodpoints.used" value="{{system.bloodpoints.used}}"
                        data-dtype="Number" />
                </div>
            </div>
            <div class="single-feature-container">
                <div class="feature-header">Proficiencies <a data-action="createItem" data-type="proficiency">+</a>
                </div>
                <div class="feature-name">
                    {{#each proficiencies as |item id|}}
                    <span data-action="editItem" data-item-id="{{item._id}}">{{item.name}}
                        <a class='item-control item-delete' data-action="deleteItem" data-item-id="{{item._id}}"
                            title='{{localize "DOCUMENT.Delete" type=' Item'}}'>
                            <i class='fas fa-trash'></i>
                        </a>
                    </span>
                    {{/each}}
                </div>
            </div>
            <fieldset>
                <legend>Checks / Actions / etc.</legend>
                <div class="flexrow action-buttons">
                    <button data-action="rollFrenzyCheck" class="roll-button"><img
                            src="systems/shadowcity-blood-neon-vtt/assets/icons/icon-mad.svg" alt=""
                            height="16px" />{{localize
                        "SHADOWCITY.LABELS.Buttons.frenzy"}}</button>
                    <button data-action="rollExpendedFrenzyCheck" class="roll-button"><img
                            src="systems/shadowcity-blood-neon-vtt/assets/icons/icon-mad.svg" alt=""
                            height="16px" />{{localize
                        "SHADOWCITY.LABELS.Buttons.expendedFrenzy"}}</button>
                </div>
                <div class="flexrow action-buttons">
                    <button data-action="clickRiseAtSundown" class="roll-button"><img
                            src="systems/shadowcity-blood-neon-vtt/assets/icons/icon-sundown.svg" alt=""
                            height="16px" />{{localize "SHADOWCITY.LABELS.Buttons.riseAtSundown"}}</button>
                    <button data-action="clickBloodHealing" class="roll-button"><img
                            src="systems/shadowcity-blood-neon-vtt/assets/icons/icon-bloodheal.svg" alt=""
                            height="16px" />{{localize "SHADOWCITY.LABELS.Buttons.bloodHealing"}}</button>
                </div>

            </fieldset>
        </div>
    </div>

</section>