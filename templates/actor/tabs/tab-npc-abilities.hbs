<section class="tab {{tabs.abilities.id}} {{tabs.abilities.cssClass}} scrollable" id="abilities"
    data-tab="{{tabs.abilities.id}}" data-group="{{tabs.abilities.group}}">

    <div class="flexrow npc-sheet-abilities">
        <div class="left-half">
            <div class="grid grid-2col">
                <div class="ability-container">
                    <label class="ability-label">Defense</label>
                    <div class="grid grid-2col">
                        <input type="number" name="system.defense" value="{{system.defense}}" data-dtype="Number" />
                    </div>
                </div>
                <div class="ability-container">
                    <label class="ability-label"> Hit Points</label>
                    <div class="grid grid-2col">
                        <input type="number" name="system.health.value" value="{{system.health.value}}"
                            data-dtype="Number" />
                        <input type="number" name="system.health.max" value="{{system.health.max}}"
                            data-dtype="Number" />
                    </div>
                </div>

            </div>
            <div class="grid grid-2col">
                <div class="ability-container">
                    <label class="ability-label">Bloodpoints</label>
                    <div class="grid grid-2col">
                        <input type="number" name="system.bloodpoints.value" value="{{system.bloodpoints.value}}"
                            data-dtype="Number" />
                        <input type="number" name="system.bloodpoints.max" value="{{system.bloodpoints.max}}"
                            data-dtype="Number" />
                    </div>
                </div>
                <div class="ability-container">
                    <label class="ability-label">Lvl</label>
                    <div class="grid grid-2col">
                        <input class="grid-span-2" type="number" name="system.level" value="{{system.level}}"
                            data-dtype="Number" />
                    </div>
                </div>
            </div>
            <div class="abilities-section">
                <div class="grid grid-2col">
                    {{> "systems/shadowcity-blood-neon-vtt/templates/actor/parts/npc-ability-partial.hbs"
                    key='awareness'
                    label='Awareness' value=system.abilities.awareness.value
                    mod_value=system.abilities.awareness.mod_value}}
                    {{> "systems/shadowcity-blood-neon-vtt/templates/actor/parts/npc-ability-partial.hbs" key='physique'
                    label='Physique' value=system.abilities.physique.value
                    mod_value=system.abilities.physique.mod_value}}
                </div>
                <div class="grid grid-2col">
                    {{> "systems/shadowcity-blood-neon-vtt/templates/actor/parts/npc-ability-partial.hbs"
                    key='cognition'
                    label='Cognition' value=system.abilities.cognition.value
                    mod_value=system.abilities.cognition.mod_value}}
                    {{> "systems/shadowcity-blood-neon-vtt/templates/actor/parts/npc-ability-partial.hbs"
                    key='quickness'
                    label='Quickness' value=system.abilities.quickness.value
                    mod_value=system.abilities.quickness.mod_value}}
                </div>
                <div class="grid grid-2col">
                    {{> "systems/shadowcity-blood-neon-vtt/templates/actor/parts/npc-ability-partial.hbs"
                    key='magnetism'
                    label='Magnetism' value=system.abilities.magnetism.value
                    mod_value=system.abilities.magnetism.mod_value}}
                    {{> "systems/shadowcity-blood-neon-vtt/templates/actor/parts/npc-ability-partial.hbs"
                    key='willpower'
                    label='Willpower' value=system.abilities.willpower.value
                    mod_value=system.abilities.willpower.mod_value}}
                </div>
            </div>
            <fieldset>
                <legend>Move</legend>
                {{> "systems/shadowcity-blood-neon-vtt/templates/shared/move-select-partial.hbs" name="system.move"
                value=system.move
                nameExtra="system.moveExtra" valueExtra=system.moveExtra}}
            </fieldset>
        </div>
        <div class="right-half">
            <fieldset>
                <legend>Attacks <a class='item-control item-create' data-action="createItem" data-type='npcAttack'>
                        <i class='fas fa-plus'></i>
                    </a></legend>
                <ol class='items-list'>
                    {{#each attacks as |item id|}}
                    <li class='item flexrow' data-item-id='{{item._id}}'>
                        <div class='item-name'>
                            <div class='item-image'>
                                <a class='rollable' data-roll-type='item' data-action="rollAttack"
                                    data-attack-id='{{item._id}}'>
                                    <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
                                </a>
                            </div>
                            <span data-action="rollAttack" data-attack-id="{{item._id}}" class="rollable">
                                <strong>{{item.system.numAttacks}} {{item.name}} </strong>
                                +{{item.system.attackBonus}} ({{item.system.damage}} {{item.system.special}}) </span>
                        </div>
                        <div class='item-controls'>
                            <a class='item-control item-edit' data-action="editItem" data-item-id='{{item._id}}'
                                title='{{localize "DOCUMENT.Update" type=' Item'}}'>
                                <i class='fas fa-edit'></i>
                            </a>
                            <a class='item-control item-delete' data-action="deleteItem" data-item-id='{{item._id}}'
                                title='{{localize "DOCUMENT.Delete" type=' Item'}}'>
                                <i class='fas fa-trash'></i>
                            </a>
                        </div>
                    </li>
                    {{/each}}
                </ol>
            </fieldset>

            <fieldset>
                <legend>Habits</legend>
                <textarea name="system.habits" rows="4" cols="36">{{system.habits}}</textarea>
            </fieldset>
            <fieldset>
                <legend>Features <a class='item-control item-create' data-action="createItem" data-type='npcFeature'>
                        <i class='fas fa-plus'></i>
                    </a></legend>
                <ol class='items-list'>
                    {{#each features as |item id|}}
                    <li class='item flexcol' data-item-id='{{item._id}}'>
                        <div class="flexrow npc-feature-header" data-item-id='{{item._id}}'>
                            <div class='item-name'>
                                <div class='item-image'>
                                    <a class='rollable' data-roll-type='item' data-action="rollWeapon"
                                        data-item-id='{{item._id}}'>
                                        <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
                                    </a>
                                </div>
                                <span> <strong>{{item.name}} </strong> </span>
                            </div>
                            <div class='item-controls'>
                                <a class='item-control item-edit' data-action="editItem" data-item-id='{{item._id}}'
                                    title='{{localize "DOCUMENT.Update" type=' Item'}}'>
                                    <i class='fas fa-edit'></i>
                                </a>
                                <a class='item-control item-delete' data-action="deleteItem" data-item-id='{{item._id}}'
                                    title='{{localize "DOCUMENT.Delete" type=' Item'}}'>
                                    <i class='fas fa-trash'></i>
                                </a>
                            </div>
                        </div>
                        <div class="item-description">{{{item.system.description}}}</div>
                    </li>
                    {{/each}}
                </ol>
            </fieldset>
        </div>
    </div>

</section>