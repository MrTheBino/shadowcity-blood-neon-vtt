<section class="tab {{tabs.equipment.id}} {{tabs.equipment.cssClass}} scrollable" id="equipment"
    data-tab="{{tabs.equipment.id}}" data-group="{{tabs.equipment.group}}">

    <ol class='items-list'>
        <li class='item flexrow items-header'>
            <div class='item-name'>{{localize 'Name'}}</div>
            <div class='item-prop'>Damage</div>
            <div class='item-prop'>Range</div>
            <div class='item-prop'>Properties</div>
            <div class='item-controls'>
                <a class='item-control item-create' data-action="createItem" title='{{localize "DOCUMENT.Create" type='
                    Item'}}' data-type='rangedWeapon'>
                    <i class='fas fa-plus'></i>
                </a>
            </div>
        </li>
        {{#each weapons as |item id|}}
        <li class='item flexrow' data-item-id='{{item._id}}'>
            <div class='item-name'>
                <div class='item-image'>
                    <a class='rollable' data-roll-type='item'>
                        <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
                    </a>
                </div>
                <span class="tooltip-hover" data-tooltip-html="{{{itemTooltipHTML item}}}">{{item.name}}</span>
            </div>
            <div class='item-prop'>{{item.system.damage}}</div>
            <div class='item-prop'>{{item.system.range}}</div>
            <div class='item-prop'>{{> 'systems/shadowcity-blood-neon-vtt/templates/shared/weapon-properties-descriptor.hbs' properties=item.system.properties}}</div>
            <div class='item-controls'>
                <a class='item-control item-edit' data-action="editItem" title='{{localize "DOCUMENT.Update" type='
                    Item'}}'>
                    <i class='fas fa-edit'></i>
                </a>
                <a class='item-control item-delete' data-action="deleteItem" title='{{localize "DOCUMENT.Delete" type='
                    Item'}}'>
                    <i class='fas fa-trash'></i>
                </a>
            </div>
        </li>
        {{/each}}
    </ol>

    <ol class='items-list'>
        <li class='item flexrow items-header'>
            <div class='item-name'>{{localize 'Name'}}</div>
            <div class='item-prop'>Price</div>
            <div class='item-prop'>Quantity</div>
            <div class='item-prop'>Properties</div>
            <div class='item-controls'>
                <a class='item-control item-create' data-action="createItem" title='{{localize "DOCUMENT.Create" type='
                    Item'}}' data-type='item'>
                    <i class='fas fa-plus'></i>
                </a>
            </div>
        </li>
        {{#each gear as |item id|}}
        <li class='item flexrow' data-item-id='{{item._id}}'>
            <div class='item-name'>
                <div class='item-image'>
                    <a class='rollable' data-roll-type='item'>
                        <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
                    </a>
                </div>
                <span class="tooltip-hover" data-tooltip-html="{{{itemTooltipHTML item}}}">{{item.name}}</span>
            </div>
            <div class='item-prop'>{{item.system.purchasePrice}}</div>
            <div class='item-prop'>{{item.system.quantity}}</div>
            <div class='item-prop'>{{item.system.properties}}</div>
            <div class='item-controls'>
                <a class='item-control item-edit' data-action="editItem" title='{{localize "DOCUMENT.Update" type='
                    Item'}}'>
                    <i class='fas fa-edit'></i>
                </a>
                <a class='item-control item-delete' data-action="deleteItem" title='{{localize "DOCUMENT.Delete" type='
                    Item'}}'>
                    <i class='fas fa-trash'></i>
                </a>
            </div>
        </li>
        {{/each}}
    </ol>

</section>